#!/bin/bash
export TERM=screen-256color
source ~/.fzf.bash
cd $HOME


# WHICH OS?
case $( uname -s ) in
Linux)
    OS="LINUX"
    ;;
Darwin)
    OS="MAC"
    ;;
esac

# STARTX
if [ $OS == LINUX ] && [ -z "$SSH_CLIENT" ] && [ -z "$SSH_TTY" ] && [ -z "$SSH_CONNECTION" ]; then
    # screen layout
    # sh ~/.screenlayout/lemonster.sh

    # window manager
    [[ -z $DISPLAY && XDG_VTNR -eq 1 ]] && exec startx && xbindkeys
fi

# DIR PATHS
export DROPBOX="$HOME/Dropbox"
export PROJECTS="$DROPBOX/proj"
export DOTFILES="$PROJECTS/dotfiles"
export SCRIPTS="$DOTFILES/scripts"

# DIR SHORTCUTS
alias down="cd ~/Downloads";
alias dotfiles="cd $DOTFILES";
alias p="cd $PROJECTS";
alias toys="cd $PROJECTS/toys"
alias scripts="cd $SCRIPTS"
alias work="cd $DROPBOX/work"

# websites
alias websites="cd $PROJECTS/websites/"
alias domino="cd $PROJECTS/websites/domino"
alias chamber="cd $PROJECTS/websites/chamber"
alias chutsu="cd $PROJECTS/websites/chutsu.github.com"
alias recall="cd $PROJECTS/websites/recall"

# membank
alias membank="cd $PROJECTS/membank/"
alias notes="cd $DROPBOX/notes; vim; cd -"
alias papers="cd $PROJECTS/papers"
alias docs="cd $PROJECTS/membank/docs"

# projects
alias ids="cd $PROJECTS/ids/"
alias evolve="cd $PROJECTS/evolve"
alias al="cd $PROJECTS/al/"
alias munit="cd $PROJECTS/munit"
alias eyes="cd $PROJECTS/eyes"
alias playground="cd $PROJECTS/playground"
alias qfly="cd $PROJECTS/qfly"
alias prototype="cd $PROJECTS/prototype"
alias ditto="cd $PROJECTS/ditto"
alias wire="cd $PROJECTS/wire"
alias cog="cd $PROJECTS/cog"
alias recognizer="cd $PROJECTS/recognizer"
alias qsim="cd $PROJECTS/qsim"
alias awesomo="cd $PROJECTS/awesomo"
alias robotics="cd $PROJECTS/robotics"
alias atim="cd $PROJECTS/atim"
alias numbers="cd $PROJECTS/numbers"
alias sr="cd $PROJECTS/sr"
alias slam="cd $PROJECTS/slam"
alias libwave="cd $PROJECTS/libwave"
alias flightstack="cd $PROJECTS/flightstack"
alias paper="cd ~/docs/papers/2017_03-IROS-Autonomous_Landing"

# GIT ALIASES
alias gitlog="git log --graph \
    --abbrev-commit \
    --decorate \
    --date=relative \
    --format=format:'%C(bold blue)%h%C(reset) \
    - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' \
    --all"


# EXECUTIONAL SHORTCUTS
if [ $OS == LINUX ]; then
    alias ls='ls -lh --group-directories-first --color'
    alias la='ls -lha --color'
    alias get='\
        vim $HOME/dotfiles/debian/deb.pkgs; \
        sudo sh $HOME/dotfiles/debian/deb_init.sh'
    alias search='apt-cache search'
    alias update='sudo apt-get update'
    alias remove='sudo apt-get remove'
    alias purge='sudo apt-get purge'
elif [ $OS == MAC ]; then
    alias ls='ls -lh'
    alias la='ls -lha'
fi

alias vimrc="vim $HOME/.vimrc";
alias bashrc="vim $HOME/.bash_profile && source $HOME/.bash_profile";
alias todo="vim $DROPBOX/TODO";
alias qgc="cd $HOME/qgroundcontrol/ && ./qgroundcontrol-start.sh && cd -";


# ENVIRONMENTAL SETTINGS
export PATH=$PATH:$PROJECTS/dotfiles/scripts:/usr/local/cuda/bin
export VISUAL=vim
export EDITOR=vim




# SHELL SETTINGS
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/[\1]/'
}
PS1='[\w]\[\033[1;35m\]$(parse_git_branch)\[\033[0m\] > '
export HISTSIZE=1000000
export HISTFILESIZE=1000000000
if [ -n "$DISPLAY" -a "$TERM" == "xterm" ]; then
    export TERM=xterm-256color
fi
stty -ixon  # disable ctrl-s (software flow control)


# START TMUX ON BASH STARTUP
if [ $OS == "LINUX" ]; then
    if which tmux 2>&1 >/dev/null; then  # check if tmux is installed
        if tmux ls 2>&1 >/dev/null; then  # check if tmux already has sessions
            [[ -z "$TMUX" ]] && exec tmux attach
        else
            [[ -z "$TMUX" ]] && exec tmux -2 -f ~/.tmux.conf
        fi
    fi
fi

alias odroid="ssh -X odroid@192.168.1.6"
source /opt/ros/kinetic/setup.bash
source ~/catkin_ws/devel/setup.bash

alias mavros="roslaunch mavros px4.launch"
alias awesomo="cd $HOME/catkin_ws/src/awesomo"
alias awesomo_make="cd $HOME/catkin_ws/ && catkin_make && cd -"
alias odroid="ssh -X odroid@192.168.1.6"
alias mocap="cd catkin_ws/src/mocap_optitrack/"
alias mocap_start="cd catkin_ws/src/mocap_optitrack/; roslaunch launch/mocap_awesomo.launch; cd -"
alias sbgc="cd ~/SimpleBGC_GUI_2_56b7/; java -jar SimpleBGC_GUI.jar; cd -"
alias pi="ssh -X pi@192.168.1.21"
alias tx1="ssh -X ubuntu@192.168.1.24"
alias zero="ssh -X pi@192.168.1.100"
alias catkin_ws="cd ~/catkin_ws/"
alias awesomo_record="sh ~/catkin_ws/src/awesomo/scripts/awesomo_record.sh"

# export ROS_MASTER_URI=http://192.168.1.24:11311
# alias awesomo_tower="sh ~/catkin_ws/src/awesomo/scripts/awesomo_tower.sh"
