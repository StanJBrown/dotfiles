# MAIL SETTINGS
set from = "chutsu@gmail.com"
set realname = "Chris Choi"
set imap_user = "chutsu@gmail.com"
set smtp_url = "smtp://chutsu@smtp.gmail.com:587/"

# APPEARANCE
color search        white   black
color hdrdefault    white   black   # headers white on black
color quoted        cyan    black   # quoted text in blue
color signature     red     black   # signature in red

color header        color45    black   "^(From)"
color header        color45    black   "^(To)"
color header        color45    black   "^(Date)"
color header        color47    black   "^(Subject)"
color hdrdefault    color45    black

# color index         black color63
# color status        black color63

# BEHAVIOUR
set sleep_time = 0
mailboxes "=inbox"  # auto check for incoming emails
set imap_keepalive = 300
set mail_check = 120
macro pager \cp <pipe-entry>'urlview'<enter> 'Follow links with urlview'

# FOLDERS AND LABELS
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Google Mail]/Drafts"
set header_cache = ~/.mail/header_cache
set message_cachedir= ~/.mail/msg_cache

# INDEX VIEW OPTIONS
set date_format = "%m/%d"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# PAGER VIEW OPTIONS
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# HEADER OPTIONS
ignore *                                # ignore all headers
unignore from: to: cc: date: subject:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order from: to: cc: date: subject:  # and in this order

# OPTIONS
set status_on_top = yes
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# SECURING
set move = no  #Stop asking to "move read messages to mbox"!

# KEY BINDINGS
bind editor <space> noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Google Mail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Google Mail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=[Google Mail]/Drafts<enter>" "Go to drafts"
